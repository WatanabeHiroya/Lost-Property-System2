<% provide(:title, "Top") %>

  <!-- Fixed navbar -->
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand"><b>忘れ物防止アプリ</b></a>
      </div>

      <!--/.nav-collapse -->
    </div>
  </div>

  <div id="headerwrap">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <h1 class="top-page-coment">チェックリストを使って<br>忘れ物がない日々を</h1>
          <div class="login-btn">
            <%= link_to "ログイン", login_path, class: "btn btn-lg btn-success" %>
            <%= link_to "新規登録", new_user_path, class: "btn btn-lg btn-danger" %>
          </div>
          <div class="sns-login">
            <ul class="snsbtniti2">
              <li><%= link_to "Twitter", '/auth/twitter', class: "flowbtn15 fl_tw1" %></li>
              <li><%= link_to "Google", '/auth/goole_oauth2', class: "flowbtn15 google_btn15" %></li>
              <li><%= link_to "LINE", '/auth/line', class: "btn btn-block btn-social button line-button" %></li>

              <li><%= link_to '/auth/twitter', class: "btn btn-social btn-twitter" do %>
                    <span class="fa fa-twitter"></span> Twitterアカウントでログイン
                  <% end %>
              </li>
              <li><%= link_to '/auth/google_oauth2', class: "btn btn-social btn-google" do %>
                    <span class="fa fa-google"></span> Googleアカウントでログイン
                  <% end %>
              </li>
              <li><%= link_to '/auth/line', class: "btn btn-social btn-line" do %>
                    <img src="/assets/btn_login_base.png">
                  <% end %>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6">
          <img class="img-responsive" src="/assets/ipad-hand.png">
        </div>
      </div>
    </div>
  </div>