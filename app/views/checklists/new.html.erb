<% provide(:title, 'チェックリスト作成') %>
<% provide(:class_text, 'checklists') %>

<h1>チェックリスト作成</h1>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @checklist, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @checklist %>
      
      <%= f.label :title, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :title, class: "form-control" %>
      
    <% end %>
  </div>
</div>