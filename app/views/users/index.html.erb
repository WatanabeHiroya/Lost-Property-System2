<% provide(:title, 'Users') %>
<h1 class="users-list">Users</h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= will_paginate %>
    <table class="table table-condensed" id="table-users">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% unless user.name == "管理者" %>
            <tr>
              <td><%= link_to user.name, user, :style=>"color:white;" %></td>
              <td>
                <% if current_user.admin? && !current_user?(user) %>
                  <%= link_to "削除", user, method: :delete,
                      data: { confirm: "削除してよろしいですか？" },
                      class: "btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>