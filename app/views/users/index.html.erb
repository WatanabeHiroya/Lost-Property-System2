<% provide(:title, 'Users') %>
<h1 class="users-list">Users</h1>

<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <%= will_paginate %>
    <table class="table table-condensed" id="table-users">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% unless user.name == "管理者" %>
            <tr>
              <td class="users-index"><%= user.name %></td>
              <td><%= link_to image_tag('えんぴつのアイコン素材.png', width: '30'), edit_user_path(user), class: "btn-edit" %></td>
              <td><%= link_to image_tag('スタンダードなゴミ箱アイコン.png', width: '30'), user, method: :delete,
                      data: { confirm: "削除してよろしいですか？" },
                      class: "btn-deleter" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>